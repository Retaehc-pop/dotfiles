@theme "~/.config/rofi/themes/catppuccin-mocha.rasi"

configuration{
    modi: "run,drun,window";
    //lines: 5;
    font: "Hack Nerd Font 14";
    show-icons: true;
    icon-theme: "Oranchelo";
    terminal: "st";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-drun: "   Apps ";
    display-run: "   Run ";
    display-window: "   window";
    //display-Network: " 󰤨  Network";
    sidebar-mode: true;
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    height: 360px;
    border: 3px;
    border-color: @bg0;
    background-color: @bg1;
}

mainbox {
    background-color: @bg1;
}

inputbar {
    children: [prompt,entry];
    background-color: @bg1;
    border-radius: 5px;
    padding: 2px;
}

prompt {
    background-color: @blue;
    padding: 6px;
    text-color: @bg1;
    border-radius: 3px;
    margin: 20px 0px 0px 20px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 6px;
    margin: 20px 0px 0px 10px;
    text-color: @fg0;
    background-color: @bg1;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 10px 0px 0px 20px;
    columns: 1;
    lines: 6;
    dynamic: false;
    background-color: @bg1;
}

element {
    padding: 5px;
    background-color: @bg1;
    text-color: @fg0  ;
}

element-icon {
    size: 25px;
}

element selected {
    background-color:  @bg3 ;
    text-color: @fg1  ;
}

mode-switcher {
    spacing: 0;
  }

button {
    padding: 10px;
    background-color: @bg2;
    text-color: @fg1;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
  background-color: @bg1;
  text-color: @blue;
}
